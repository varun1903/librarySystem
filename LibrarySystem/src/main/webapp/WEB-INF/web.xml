<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Library Management System</display-name>

    <!-- Servlet Configuration -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.library.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.library.servlet.AdminDashboardServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserDashboardServlet</servlet-name>
        <servlet-class>com.library.servlet.UserDashboardServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>IssueBookServlet</servlet-name>
        <servlet-class>com.library.servlet.IssueBookServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ReturnBookServlet</servlet-name>
        <servlet-class>com.library.servlet.ReturnBookServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>com.library.servlet.AddBookServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UpdateBookServlet</servlet-name>
        <servlet-class>com.library.servlet.UpdateBookServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PayFineServlet</servlet-name>
        <servlet-class>com.library.servlet.PayFineServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddMembershipServlet</servlet-name>
        <servlet-class>com.library.servlet.AddMembershipServlet</servlet-class>
    </servlet>

    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/AdminDashboardServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserDashboardServlet</servlet-name>
        <url-pattern>/UserDashboardServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>IssueBookServlet</servlet-name>
        <url-pattern>/IssueBookServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ReturnBookServlet</servlet-name>
        <url-pattern>/ReturnBookServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/AddBookServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdateBookServlet</servlet-name>
        <url-pattern>/UpdateBookServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PayFineServlet</servlet-name>
        <url-pattern>/PayFineServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddMembershipServlet</servlet-name>
        <url-pattern>/AddMembershipServlet</url-pattern>
    </servlet-mapping>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>jsps/login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Error Handling -->
    <error-page>
        <error-code>404</error-code>
        <location>/jsps/error.jsp</location>
    </error-page>

</web-app>
